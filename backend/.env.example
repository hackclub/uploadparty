# Backend .env example (do NOT commit real secrets)
# Copy to backend/.env for local development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=uploadparty
DB_PASSWORD=your_local_db_password
DB_NAME=uploadparty_db
DB_SSL_MODE=disable

# Server
PORT=8080
GIN_MODE=debug
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=change_me

# Redis (optional in backend; used by services)
REDIS_URL=redis://localhost:6379

# AWS (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=uploadparty-beats

# Native Instruments (optional)
NI_API_KEY=
NI_API_URL=https://api.native-instruments.com
